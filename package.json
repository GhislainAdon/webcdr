{
  "name": "webcdr",
  "version": "0.0.0",
  "description": "Web Asterisk CDR viewer",
  "main": "server.js",
  "scripts": {
    "watch": "watchify public/js/main.js -d -o public/js/build/bundle.js -v",
    "watchnd": "watchify public/js/main.js -o public/js/build/bundle.js -v",
    "build": "browserify public/js/main.js -o public/js/build/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Ivan Poddubny <ivan.poddubny@gmail.com>",
  "license": "Proprietary",
  "dependencies": {
    "activedirectory": "^0.7.0",
    "backbone": "^1.2.1",
    "backbone.marionette": "^2.4.2",
    "bcryptjs": "^2.2.0",
    "bluebird": "^2.9.0",
    "body-parser": "^1.13.3",
    "bookshelf": "^0.8.0",
    "brfs": "^1.4.0",
    "compression": "^1.5.0",
    "connect-leveldb": "^0.2.0",
    "cookie-parser": "^1.3.0",
    "excel-export": "^0.4.1",
    "express": "^4.13.0",
    "express-session": "^1.11.0",
    "glob": "^5.0.0",
    "ini": "~1.3.0",
    "jquery": "~2.1.1",
    "knex": "^0.8.0",
    "level": "^1.3.0",
    "lodash": "^3.10.0",
    "moment": "^2.10.0",
    "morgan": "^1.6.0",
    "mysql": "^2.9.0",
    "passport": "^0.3.0",
    "passport-local": "~1.0.0",
    "underscore": "^1.8.0",
    "zip-stream": "^0.5.0"
  },
  "devDependencies": {
    "browserify": "^11.0.0",
    "browserify-shim": "^3.8.0"
  },
  "private": true,
  "browserify": {
    "transform": [
      "brfs",
      "browserify-shim"
    ]
  },
  "browser": {
    "spin.js": "./public/bower_components/spin.js/spin.js",
    "audiojs": "./public/bower_components/audiojs/audiojs/audio.js",
    "bootstrap-daterangepicker": "./public/bower_components/bootstrap-daterangepicker/daterangepicker.js",
    "bootstrap-datepicker": "./public/js/vendor/bootstrap-datepicker.js",
    "bootstrap-select": "./public/bower_components/bootstrap-select/bootstrap-select.js",
    "backgrid-paginator": "./public/js/vendor/backgrid-paginator.js",
    "backbone.paginator": "./public/bower_components/backbone.paginator/lib/backbone.paginator.js",
    "backgrid": "./public/bower_components/backgrid/lib/backgrid.js",
    "bootstrap": "./public/bower_components/bootstrap/dist/js/bootstrap.js"
  },
  "browserify-shim": {
    "audiojs": "audiojs",
    "spin.js": "Spinner",
    "bootstrap-daterangepicker": {
      "depends": [
        "moment",
        "jquery:jQuery"
      ]
    },
    "bootstrap-select": {
      "depends": [
        "jquery:jQuery",
        "bootstrap"
      ]
    },
    "bootstrap": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  }
}
